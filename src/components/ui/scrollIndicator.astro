---
import { Mouse, ChevronDown } from 'lucide-astro';
---

<div class="scroll-indicator">
  <Mouse class="mouse" />
  <div class="dots">
    <div class="line"></div>
    <div class="line"></div>
    <div class="line"></div>
    <div class="line"></div>
  </div>
  <ChevronDown class="arrow" />
</div>

<style lang="scss">
  @use '@styles/_mixins' as *;

  .scroll-indicator {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: rem(8);

    &:hover {
      animation: float 2s ease-in-out infinite;
    }
  }

  .mouse {
    width: rem(32);
    height: rem(48);
    stroke: var(--clr-brand-1);
    stroke-width: 2;
  }

  // .mouse :global(rect) {
  //   animation: scroll 1.5s ease-in-out infinite;
  // }

  .dots {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: rem(4);
  }

  .line {
    width: rem(2);
    height: rem(8);
    background: var(--clr-brand-1);
    border-radius: rem(1);
  }

  .arrow {
    width: rem(20);
    height: rem(20);
    stroke: var(--clr-brand-1);
    stroke-width: 2;
  }

  @keyframes float {
    0%,
    100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(rem(8));
    }
  }

  // @keyframes scroll {
